%section#venue
  .wrapper
    %h1.heading
      %a{:name=>"venue"}
      %span Venue
    %h2
      = link_to "Lagoon Beach Hotel, Cape Town", "http://www.lagoonbeachhotel.co.za/"
    = img "../images/cape_town_lagoon_beach.png"
    .map.left
      %script{:src => "http://maps.google.com/maps/api/js?sensor=false", :type => "text/javascript"}
      %div{:style => "overflow:hidden;height:200px;width:200px;"}
        #gmap_canvas{:style => "height:200px;width:200px;"}
        :css
          #gmap_canvas img{max-width:none!important;background:none!important}
        %a#get-map-data.google-map-code{:href => "http://goertz-gutschein-map.com"} unterschiedlichsten
      :javascript
        function init_map(){var myOptions = {zoom:15,center:new google.maps.LatLng(-33.891698,18.48435100000006),mapTypeId: google.maps.MapTypeId.ROADMAP};map = new google.maps.Map(document.getElementById("gmap_canvas"), myOptions);marker = new google.maps.Marker({map: map,position: new google.maps.LatLng(-33.891698, 18.48435100000006)});infowindow = new google.maps.InfoWindow({content:"<b>The Lagoon Beach Hotel</b><br/>Lagoon Beach Drive<br/> Cape Town" });google.maps.event.addListener(marker, "click", function(){infowindow.open(map,marker);});}google.maps.event.addDomListener(window, 'load', init_map);

